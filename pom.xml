    <artifactId>open-opus-java</artifactId>
    <version>0.1.1-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>Open Opus Java</name>
    <description>A Java client library for the Open Opus API.</description>
    <url>https://www.github.com/jlynxdev/open-opus-java</url>

