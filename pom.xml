    <licenses>
        <license>
            <name>The MIT License</name>
            <url>https://opensource.org/license/mit</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <connection>scm:git://github.com/jlynxdev/open-opus-java.git</connection>
        <developerConnection>scm:git:https://github.com/jlynxdev/open-opus-java.git</developerConnection>
        <url>https://github.com/jlynxdev/open-opus-java</url>
    </scm>

    <properties>
        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

